rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function getRoleDoc() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    function getRole() {
      return getRoleDoc().roleId;
    }

    function isAdmin() {
      return getRole() == 'admin';
    }
    
    function isDeveloper() {
      return getRole() == 'developer';
    }
    
    function hasPermission(permission) {
      let roleId = getRole();
      let rolePermissions = get(/databases/$(database)/documents/roles/$(roleId)).data.permissions;
      return rolePermissions[permission] == true;
    }

    // User Profile
    // Developers/Admins should be able to manage all user profiles.
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin() || isDeveloper();
      allow update: if isOwner(userId) || isAdmin() || isDeveloper();
      allow create, delete: if isAdmin() || isDeveloper();
    }
    
    // Roles Collection
    // Developers/Admins should be able to read and write roles.
    match /roles/{roleId} {
      allow read: if isSignedIn();
      allow write: if isAdmin() || isDeveloper();
    }
    
    // Warehouses Collection
    match /warehouses/{warehouseId} {
      allow read: if isSignedIn();
      allow write: if isAdmin() || isDeveloper();
    }

    // Products Collection
    match /products/{productId} {
      allow read: if hasPermission('viewInventory');
      allow write: if hasPermission('manageProducts');
    }

    // Other collections can be added here following a similar pattern.

    // Catch-all for any other collections for admin/dev access.
    match /{document=**} {
      allow read, write: if isAdmin() || isDeveloper();
    }
  }
}
